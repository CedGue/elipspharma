<assembly>
  <id>${project.version}-livraison</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  
       <!-- Projet -->
    <file>
      <source>target/livrables/eclipse-${project.version}-project.zip</source>
      <outputDirectory></outputDirectory>
      <destName>eclipse-${project.version}-project.zip</destName>
    </file>
	
    <!-- SQL -->
    <file>
      <source>eclipse-common/src/main/sql/${project.version}/update.sql</source>
      <outputDirectory>application/sql</outputDirectory>
      <destName>update-${project.version}.sql</destName>
    </file>

    <!-- Javadoc -->
    <file>
      <source>eclipse-common/target/eclipse-common-javadoc.jar</source>
      <outputDirectory>application/javadoc</outputDirectory>
      <destName>eclipse-common-${project.version}-javadoc.jar</destName>
    </file>
    <file>
      <source>eclipse/target/eclipse-${project.version}-javadoc.jar</source>
      <outputDirectory>application/javadoc</outputDirectory>
      <destName>eclipse-web-${project.version}-javadoc.jar</destName>
    </file>
    <file>
      <source>eclipse-script/target/eclipse-script-${project.version}-javadoc.jar</source>
      <outputDirectory>application/javadoc</outputDirectory>
      <destName>eclipse-script-${project.version}-javadoc.jar</destName>
    </file>

    <!-- Sources -->
    <file>
      <source>eclipse-common/target/eclipse-common-sources.jar</source>
      <outputDirectory>application/sources</outputDirectory>
      <destName>eclipse-common-${project.version}-sources.jar</destName>
    </file>
    <file>
      <source>eclipse/target/eclipse-${project.version}-sources.jar</source>
      <outputDirectory>application/sources</outputDirectory>
      <destName>eclipse-web-${project.version}-sources.jar</destName>
    </file>
    <file>
      <source>eclipse-script/target/eclipse-script-${project.version}-sources.jar</source>
      <outputDirectory>application/sources</outputDirectory>
      <destName>eclipse-script-${project.version}-sources.jar</destName>
    </file>

    <!-- Application -->
    <file>
      <source>eclipse/target/eclipse-${project.version}.war</source>
      <outputDirectory>application</outputDirectory>
    </file>


    <!-- JAR Script -->
    <file>
      <source>eclipse-script/target/eclipse-script-${project.version}-shaded.jar</source>
      <destName>eclipse-script-${project.version}-width-dependencies.jar</destName>
      <outputDirectory>application</outputDirectory>
    </file>



   <fileSets>
 	<fileSet>
  	<directory>files</directory>
  	<outputDirectory>application/files</outputDirectory>
  </fileSet>
  </fileSets>	
</assembly>
